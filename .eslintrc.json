{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "globals": {
    "BigInt": true,
    "Metacom": true
  },
  "rules": {
    // "no-unused-vars": ["error", { "args": "all"}],
    "no-undef":"error",
    "no-await-in-loop": "warn",
    "no-duplicate-case": "warn",
    "no-duplicate-imports": "warn",
    "comma-style": ["warn", "last"],
    "comma-spacing": [
        "error",
        {
            "before": false,
            "after": true
        }
    ],
    
    "brace-style": "warn"
  }
}